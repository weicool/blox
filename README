#####################
# Leaderboard
#####################

CREATE TABLE blox_leaderboard (
    id INT UNSIGNED AUTO_INCREMENT NOT NULL,
    name VARCHAR(16) NOT NULL,
    score INT UNSIGNED NOT NULL,
    level SMALLINT UNSIGNED NOT NULL,
    date DATETIME NOT NULL,
    ip VARCHAR(16) NOT NULL,
    PRIMARY KEY (id),
    INDEX (score, level)
);

